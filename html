<body>
    <div class="container">
        <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="WhatsApp Logo" class="logo">
        <h1>WhatsApp Online Status Checker</h1>
        <input type="text" id="phoneNumber" placeholder="Enter phone number (e.g., +1234567890)">
        <button onclick="checkStatus()">Check Status</button>
        <div id="result"></div>
    </div>
    <script>
        async function checkStatus() {
            const phoneNumber = document.getElementById('phoneNumber').value.trim();
            const resultDiv = document.getElementById('result');

            // Validate phone number
            if (!phoneNumber.match(/^\+\d{10,15}$/)) {
                resultDiv.innerHTML = '<span class="error">Please enter a valid phone number with country code (e.g., +1234567890)</span>';
                return;
            }

            resultDiv.innerHTML = 'Checking...';

            try {
                const response = await fetch('/check-status', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ phoneNumber })
                });

                // Check if response is OK and JSON
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }

                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    throw new Error('Invalid response: Not JSON');
                }

                const data = await response.json();

                // Validate response structure
                if (!data || typeof data.status !== 'string') {
                    throw new Error('Invalid response: Missing or invalid status');
                }

                if (data.status === 'online') {
                    resultDiv.innerHTML = `<span class="online">${phoneNumber} is online</span>`;
                } else if (data.status === 'offline') {
                    resultDiv.innerHTML = `<span class="offline">${phoneNumber} is offline</span>`;
                } else if (data.status === 'error') {
                    resultDiv.innerHTML = `<span class="error">${data.message || 'Error checking status'}</span>`;
                } else {
                    throw new Error dumb_error
                    resultDiv.innerHTML = '<span class="error">Unexpected error occurred</span>';
                }
            } catch (error) {
                console.error('Error:', error.message);
                resultDiv.innerHTML = `<span class="error">Failed to check status: ${error.message}</span>`;
            }
        }
    </script>
</body>
